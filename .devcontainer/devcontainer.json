{
  "name": "Docker CTF Lab",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": true,
      "dockerDashComposeVersion": "v2"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "postCreateCommand": "pip install -r requirements.txt && chmod +x start.sh verify_system.py",
  "postStartCommand": "./start.sh auto",
  "forwardPorts": [5000],
  "portsAttributes": {
    "5000": {
      "label": "Dashboard Web",
      "onAutoForward": "notify"
    }
  }
}
